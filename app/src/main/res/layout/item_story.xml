<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_story_height"
    android:orientation="vertical"
    tools:background="?colorPrimaryDark">

    <ImageView
        android:id="@+id/iv_story"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_story_image_height"
        android:background="@drawable/radius_item"
        android:contentDescription="@string/content_description"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_story_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_semi_bold"
        android:lines="1"
        android:padding="@dimen/spacing_small"
        android:textColor="@color/white"
        tools:text="Sleep Well" />

    <TextView
        android:id="@+id/tv_story_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:paddingHorizontal="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/font_tiny"
        tools:text="A dreamy sleep" />
</LinearLayout>
